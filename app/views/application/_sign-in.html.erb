<%= form_for(resource,
    as: resource_name,
    url: session_path(resource_name),
    html: { class: "splash__sign-in-form" }) do |f| %>
  <%= f.email_field :email,
      class: "form__input",
      autofocus: true,
      autocomplete: "email",
      placeholder: "your.email@example.com" %>
  <%= f.password_field :password,
      class: "form__input",
      autocomplete: "current-password",
      placeholder: "••••••••" %>
  <% if devise_mapping.rememberable? %>
    <div class="form__field">
      <div class="mb-5">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
  <%= f.submit "Log in",
      class: "btn btn--primary splash-login__text" %>
<% end %>
  
<%# TODO: Add full screen overlay sign in %>
<div data-module="overlay">
  <button class="splash__sign-in-btn btn">
    <%= inline_svg "icons/profile.svg" %>
  </button>
  <div class="overlay">
    <h1>
      <%= link_to root_path do %>
        <%= inline_svg "icons/logo.svg",
            class: "header__logo" %>
      <% end %>
    </h1>
    <button class="overlay-close">
      <%= inline_svg "icons/close.svg" %>
    </button>
    <div class="overlay-content">
      <h2 class="heading-xxl md:heading-xxl mb-30">Log in to your account.</h2>
      <%= form_for(resource,
          as: resource_name,
          url: session_path(resource_name)) do |f| %>
        <%= f.label "Email", :email, class: "form__label" %>
        <%= f.email_field :email,
            class: "form__input",
            autofocus: true,
            autocomplete: "email",
            placeholder: "your.email@example.com" %>
        <%= f.label "Password", :password, class: "form__label" %>
        <%= f.password_field :password,
            class: "form__input",
            autocomplete: "current-password",
            placeholder: "••••••••" %>
        <% if devise_mapping.rememberable? %>
          <div class="form__field">
            <div class="mb-5">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
            <%= render "devise/shared/links" %>
          </div>
        <% end %>
        <%= f.submit "Log in",
            class: "btn btn--primary splash-login__text" %>
      <% end %>
    </div>
  </div>
</div>
