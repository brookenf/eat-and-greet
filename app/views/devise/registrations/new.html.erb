<%= render "header" %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "container form flex-col" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form__field">
    <%= f.label :email %>
    <%= f.email_field :email, class: "form__input", autocomplete: "email" %>
  </div>

  <div class="form__field">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form__input" %>
  </div>

  <div class="form__field">
    <%= f.label :location %>
    <%= f.text_field :location, class: "form__input" %>
  </div>

  <div class="form__field">
    <%= f.label :diet %>
    <%= f.text_field :diet, class: "form__input" %>
  </div>

  <div class="form__field">
    <%= f.label :favorite_dish %>
    <%= f.text_field :favorite_dish, class: "form__input" %>
  </div>

  <div class="form__field">
    <%= f.label "Private?" %> 
    <%= f.check_box :is_private %>
  </div>

  <div class="form__field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, class: "form__input", autocomplete: "new-password" %>
  </div>

  <div class="form__field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, class: "form__input", autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "form__button btn" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
