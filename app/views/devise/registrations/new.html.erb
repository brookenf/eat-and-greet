<%= render "header" %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "container form flex-col" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <h2 class="heading-lg sm:heading-lg">Let's make your profile.</h2>

  <h3 class="heading-md sm:heading-md">Start with the basics:</h3>
  <%= f.text_field :name, class: "form__input", placeholder: "Name" %>
  <%= f.label "This is how your name will appear to others", class: "form__label" %>
  <%= f.text_field :location, class: "form__input", placeholder: "City or town" %>

  <div class="heading-md sm:heading-md">Upload a profile picture</div>
  <p>
    <%= f.label 'Profile Picture' %>
    <%= f.file_field :profile_pic %>
  </p>
  <h3 class="heading-md sm:heading-md">Okay, we're almost finished:</h3>
  <%= f.email_field :email, class: "form__input", placeholder: "Email", autocomplete: "email" %>
  <%= f.password_field :password, class: "form__input", placeholder: "Password", autocomplete: "new-password" %>
  <%= f.password_field :password__confirmation, class: "form__input", placeholder: "Confirm password", autocomplete: "new-password" %>
  <% if @minimum_password_length %>
    <em class="form__label">(<%= @minimum_password_length %> characters minimum)</em>
  <% end %>

<% end %>

<%= render "devise/shared/links" %>
