<%= render "header" %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "container-sm form flex-col" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <h2 class="heading-lg">Let's make your profile.</h2>

  <h3 class="heading-md">Start with the basics:</h3>
  <%= f.text_field :name, class: "form__input", placeholder: "Name" %>
  <%= f.label "This is how your name will appear to others", class: "form-heading" %>
  <%= f.text_field :location, class: "form__input", placeholder: "City or town" %>

  <div class="heading-md">Upload a profile picture</div>
  <h3 class="heading-md">Okay, we're almost finished:</h3>
  <%= f.email_field :email, class: "form__input", placeholder: "Email", autocomplete: "email" %>
  <%= f.password_field :password, class: "form__input", placeholder: "Password", autocomplete: "new-password" %>

  <% if @minimum_password_length %>
    <em class="form-heading">(<%= @minimum_password_length %> characters minimum)</em>
  <% end %>

  <%= f.submit "Sign up", class: "form__button btn" %>
<% end %>