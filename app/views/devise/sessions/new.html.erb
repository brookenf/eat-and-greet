<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form" }) do |f| %>
  <%= f.email_field :email, class: "form__input", autofocus: true, autocomplete: "email", placeholder: "email address" %>
  <%= f.password_field :password, class: "form__input", autocomplete: "current-password", placeholder: "password" %>

  <% if devise_mapping.rememberable? %>
    <div class="form__field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <%= f.submit "Sign in", class: "form__field btn" %>
<% end %>

<%= render "devise/shared/links" %>